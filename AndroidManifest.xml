<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.deep3d.app">

    <!-- Android 12+ için Bluetooth izinleri -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Android 11 ve öncesi için eski Bluetooth izinleri (uyumluluk) -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30"/>

    <!-- Bazı cihazlarda tarama için konum gerekiyor -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:label="Deep3D Starter"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Ana ekran -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Diğer ekranlar -->
        <activity android:name=".RealtimeActivity" android:exported="false"/>
        <activity android:name=".GridActivity" android:exported="false"/>

    </application>
</manifest>
