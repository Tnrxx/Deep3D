<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Üstte log / durum yazıları -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gerçek zamanlı ekran"
        android:textSize="16sp" />

    <!-- İsteğe bağlı: manuel komut girişi -->
    <EditText
        android:id="@+id/etCmd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Komut yaz (örn: AA55)"
        android:inputType="text"
        android:layout_marginTop="12dp"/>

    <!-- Gönder / Temizle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gönder" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temizle"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Hızlı komut butonları: Kotlin tarafında referans verilen ID'ler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnCmdCRLF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CRLF" />

        <Button
            android:id="@+id/btnCmds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Komutlar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnCmdAA55"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AA55" />

        <Button
            android:id="@+id/btnAutoProbe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oto Probe" />
    </LinearLayout>

</LinearLayout>
